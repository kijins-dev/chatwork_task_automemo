  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "chatwork-task-bot",
        "responseMode": "responseNode",
        "options": {}
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [0, 0]
    },
    {
      "parameters": {
        "respondWith": "text",
        "responseBody": "OK",
        "options": {}
      },
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [220, -100]
    },
    {
      "parameters": {
        "jsCode": "const body = $input.first().json.body;\nconst webhookEventType = body.webhook_event_type;\nif (webhookEventType !== 'message_created') {\n  return [];\n}\nconst messageBody = body.webhook_event.body;\nconst sendTime = body.webhook_event.send_time;\nconst accountId = body.webhook_event.account_id;\n\n// UTC → JST（+9時間）\nconst date = new Date(sendTime * 1000 + 9 * 60 * 60 * 1000);\nconst year = date.getFullYear();\nconst month = String(date.getMonth() + 1).padStart(2, '0');\nconst day = String(date.getDate()).padStart(2, '0');\nconst hours = String(date.getHours()).padStart(2, '0');\nconst minutes = String(date.getMinutes()).padStart(2, '0');\nconst dateStr = `${year}-${month}-${day}`;\nconst timeStr = `${hours}:${minutes}`;\nconst taskLine = `- [ ] ${messageBody} (${timeStr})`;\nreturn [{\n  json: {\n    dateStr,\n    taskLine,\n    messageBody,\n    accountId\n  }\n}];"
      },
      "name": "メッセージ整形",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [220, 100]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "=https://naoki-obsidian.ngrok.io/vault/01_デイリーノート/{{ $json.dateStr }}.md",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "options": {}
      },
      "name": "デイリーノート確認",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [440, 100],
